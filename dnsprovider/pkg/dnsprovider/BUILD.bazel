load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "dns.go",
        "doc.go",
        "plugins.go",
    ],
    importpath = "k8s.io/kops/dnsprovider/pkg/dnsprovider",
    visibility = ["//visibility:public"],
    deps = [
        "//dnsprovider/pkg/dnsprovider/rrstype:go_default_library",
        "//vendor/k8s.io/klog:go_default_library",
    ],
)

go_test(
    name = "go_default_test",
    srcs = ["dns_test.go"],
    embed = [":go_default_library"],
    deps = ["//dnsprovider/pkg/dnsprovider/rrstype:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//dnsprovider/pkg/dnsprovider/providers/aws/route53:all-srcs",
        "//dnsprovider/pkg/dnsprovider/providers/coredns:all-srcs",
        "//dnsprovider/pkg/dnsprovider/providers/google/clouddns:all-srcs",
        "//dnsprovider/pkg/dnsprovider/providers/openstack/designate:all-srcs",
        "//dnsprovider/pkg/dnsprovider/rrstype:all-srcs",
        "//dnsprovider/pkg/dnsprovider/tests:all-srcs",
    ],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
