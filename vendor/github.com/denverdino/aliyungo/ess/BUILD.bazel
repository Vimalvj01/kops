    name = "go_default_library",
    srcs = [
        "client.go",
        "configuration.go",
        "group.go",
        "rule.go",
        "schedule.go",
    ],
    importmap = "k8s.io/kops/vendor/github.com/denverdino/aliyungo/ess",
